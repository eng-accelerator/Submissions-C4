# Copy this file to .env and fill in your values

# OpenRouter (LLM) â€” use OPENROUTER_API_KEY or OPEN_ROUTER_API
OPENROUTER_API_KEY=sk-or-v1-xxxx
# Or: OPEN_ROUTER_API=sk-or-v1-xxxx

# Optional: Tavily for web search
TAVILY_API_KEY=tvly-xxxx

# Model on OpenRouter (e.g. openai/gpt-4o-mini, anthropic/claude-3-haiku)
LLM_MODEL=openai/gpt-4o-mini

VECTOR_DB_PATH=./data/chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2
TOP_K_RESULTS=10
UPLOAD_CHUNK_SIZE=900
UPLOAD_CHUNK_OVERLAP=150
TOKEN_TRACKING_ENABLED=true

# App environment and error display controls
APP_ENV=dev
DEBUG=true
SHOW_TRACEBACK=false

# Upload safety limits
MAX_UPLOAD_FILE_MB=15
MAX_UPLOAD_TOTAL_MB=40
MAX_PDF_PAGES=120
